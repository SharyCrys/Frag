<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".BookFragment">

    <TextView
        android:id="@+id/h1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:padding="10sp"
        android:text="Bienvenido al fragmento número dos"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/p"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:padding="10sp"
        android:text="Al pulsar el botón este leerá un fichero txt situado en la carpeta raw."
        android:textSize="16dp" />


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:src="@drawable/reading" />

    <Button
        android:id="@+id/boton_leer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:onClick="CargaDatos"
        android:padding="10sp"
        android:text="Leer fichero" />

    <ListView
        android:id="@+id/leer_datos"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>